# Forzar el uso de HTTPS (Evitar errores al pedir desde cliente https y servidor http)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} !on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
    <IfModule mod_headers.c>
        Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    </IfModule>
</IfModule>

# Ocultar la información del servidor de apache
ServerSignature Off

# Permitir CORS para el dominio
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "cornagopablo.com"
</IfModule>


# Ocultar ficheros que no sean index.php => Devolver Error 404 en lugar de 403
# No listar directorios
Options All -Indexes

# Ocultar ficheros que empiezan por .
<FilesMatch "^\.">
    RewriteEngine On
    RewriteRule ^ - [R=404]
</FilesMatch>

# Ocultar directorios y subdirectorios
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Añadir los directorios que se quiern ocultar
    RewriteRule ^model/ - [R=404]
    RewriteRule ^vendor/ - [R=404]
</IfModule>